{
    "server": {
        "app": {
            "name": "testApp",
            "nameCopy": "config:server.app.name"
        },
        "debug": {
            "log": {
                "$filter": "env.NODE_ENV",
                "$default": ["debug"],
                "production": ["warn"]
            }
        }
    },
    "connections": {
        "api": {
            "port": 4000
        },
        "web": {
            "port": 3000,
            "labels": ["web"]
        }
    },
    "register": {
        "devPlugin": {
            "register": {
                "$filter": "env.NODE_ENV",
                "$default": "require:../devPlugin.js",
                "production": "require:../plugin.js"
            }
        },
        "otherPlugin": {
            "register": "require:../otherPlugin.js",
            "before": "devPlugin",
            "select": ["web"]
        }
    }
}
