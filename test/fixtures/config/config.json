{
    "server": {
        "debug": {
            "log": {
                "$filter": "NODE_ENV",
                "$default": ["debug"],
                "production": ["warn"]
            }
        }
    },
    "connections": {
        "api": {
            "port": 4000
        },
        "web": {
            "port": 3000,
            "labels": ["web"]
        }
    },
    "register": {
        "devPlugin": {
            "register": {
                "$filter": "NODE_ENV",
                "$default": "require:../devPlugin.js",
                "production": "require:../plugin.js"
            }
        },
        "otherPlugin": {
            "register": "require:../otherPlugin.js",
            "before": "devPlugin",
            "select": ["web"]
        }
    },
    "routes": {
        "testRoute": {
            "path": "/test",
            "method": "GET",
            "handler": {
                "module": "require:../handler.js",
                "method": "createHandler",
                "arguments": [
                    "testArgument"
                ]
            },
            "config": {},
            "select": ["web"]
        },
        "testRoute2": {
            "path": "/test2",
            "method": "GET",
            "handler": "require:../handler.js",
            "select": ["web"]
        }
    }
}
